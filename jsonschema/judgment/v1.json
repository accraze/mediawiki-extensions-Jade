{
    "title": "jade/judgment",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://phabricator.wikimedia.org/diffusion/EJAD/browse/master/jsonschema/judgment/v1.json?view=raw",
    "type": "object",
    "properties": {
        "schemas": {
            "type": "object",
            "properties": {
                "damaging": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/judgment/damaging"
                    }
                },
                "drafttopic": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/judgment/drafttopic"
                    }
                },
                "goodfaith": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/judgment/goodfaith"
                    }
                },
                "itemquality": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/judgment/itemquality"
                    }
                },
                "wp10": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/judgment/wp10"
                    }
                }
            },
            "additionalProperties": false
        }
    },
    "additionalProperties": false,
    "required": ["schemas"],
    "definitions": {
        "judgment": {
            "common": {
                "type": "object",
                "properties": {
                    "data": {},
                    "notes": {
                        "type": "string"
                    },
                    "preferred": {
                        "type": "boolean",
                        "default": false,
                        "description": "True when this judgment best represents a consensus opinion."
                    }
                },
                "required": [
                    "data"
                ],
                "additionalProperties": false
            },
            "damaging": {
                "allOf": [
                    { "$ref": "#/definitions/judgment/common" },
                    {
                        "type": "object",
                        "properties": {
                            "data": { "type": "boolean" }
                        }
                    }
                ]
            },
            "goodfaith": {
                "allOf": [
                    { "$ref": "#/definitions/judgment/common" },
                    {
                        "type": "object",
                        "properties": {
                            "data": { "type": "boolean" }
                        }
                    }
                ]
            },
            "drafttopic": {
                "allOf": [
                    { "$ref": "#/definitions/judgment/common" },
                    {
                        "type": "object",
                        "properties": {
                            "data": {
                                "description": "List of topics.",
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ]
            },
            "itemquality": {
                "allOf": [
                    { "$ref": "#/definitions/judgment/common" },
                    {
                        "type": "object",
                        "properties": {
                            "data": {
                                "description": "Item quality grade, see https://www.wikidata.org/wiki/Wikidata:Item_quality",
                                "type": "string",
                                "enum": ["A", "B", "C", "D", "E"]
                            }
                        }
                    }
                ]
            },
            "wp10": {
                "allOf": [
                    { "$ref": "#/definitions/judgment/common" },
                    {
                        "type": "object",
                        "properties": {
                            "data": {
                                "description": "Article quality",
                                "type": "string",
                                "enum": ["FA", "GA", "B", "C", "Start", "Stub"]
                            }
                        }
                    }
                ]
            }
        }
    }
}
